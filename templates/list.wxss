.list
{
  background-color: white;
  margin: 30rpx;
}

.list_item
{
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: white;
  border-bottom: 1rpx solid #f1f1f1;
}

.img
{
  width: 200rpx;
  height: 150rpx;
}

.info
{
  width: 450rpx;
  height: 150rpx;
  display: flex;
  flex-flow: column wrap;
  padding-left: 15rpx;
}

.name
{
  flex-grow: 1;
  display: flex;
  align-items: center;
}


.addr
{
  flex-grow: 1;
  display: flex;
  align-items: center;
  color: #afafaf;
  font-size: 80%;
}

.ellipsis
{
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.push
{
  opacity: 0.9;
  background: #d0d0d0;
}